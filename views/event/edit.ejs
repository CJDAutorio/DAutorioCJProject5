<%- include('../partials/header.ejs')%>
<main>
    <div class="newEvent-container">
        <form action='/events/<%= event.id%>?_method=PUT' method='POST' enctype="multipart/form-data">
            <label for="category">Category</label>
            <select name="category" id="category" value="<%= event.category%>">
                <option value="Sports">Sports</option>
                <option value="VideoGame">Video Games</option>
                <option value="Board">Board Games</option>
                <option value="Card">Card Games</option>
                <option value="Other">Other</option>
            </select>

            <label for="title">Title</label>
            <input type="text" id="title" name="title" value="<%= event.title%>" />

            <label for="details">Details</label>
            <textarea id="details" name="details" name="details" cols="40" rows="5"><%=event.details%></textarea>

            <label for="startDate">Start</label>
            <input type="datetime-local" name="startDate" id="startDate" value="<%= startDateString%>" />

            <label for="endDate">End</label>
            <input type="datetime-local" name="endDate" id="endDate" value="<%= endDateString%>" />

            <label for="location">Where?</label>
            <input type="text" id="location" name="location" value="<%= event.location%>" />

            <label for="image">Image</label>
            <input type="file" id="image" name="image" accept="image/png, image/jpeg, image/jpg, image/gif" value="<%= event.image%>"/>

            <input type="submit" id="submit" />
        </form>
    </div>
</main>
<%- include('../partials/footer.ejs')%>
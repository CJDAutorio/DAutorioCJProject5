<%- include('../partials/header.ejs')%>
<main>
    <div class="newEvent-container">
        <form action='/events' method='POST' enctype="multipart/form-data">
            <label for="category">Category</label>
            <select name="category" id="category">
                <option value="Sports">Sports</option>
                <option value="VideoGame">Video Games</option>
                <option value="Board">Board Games</option>
                <option value="Card">Card Games</option>
                <option value="Other">Other</option>
            </select>
            
            <label for="title">Title</label>
            <input type="text" id="title" name="title" placeholder="Title" required/>

            <label for="details">Details</label>
            <textarea id="details" name="details" name="details" cols="40" rows="5" placeholder="Description" required minlength="10"></textarea>

            <label for="startDate">Start</label>
            <input type="datetime-local" name="startDate" id="startDate" required/>

            <label for="endDate">End</label>
            <input type="datetime-local" name="endDate" id="endDate" required/>

            <label for="location">Where?</label>
            <input type="text" id="location" name="location" placeholder="Location" required/>

            <label for="image">Image</label>
            <input type="file" id="image" name="image" required accept="image/png, image/jpeg, image/jpg, image/gif"/>

            <input type="submit" id="submit" />
        </form>
    </div>
</main>
<%- include('../partials/footer.ejs')%>